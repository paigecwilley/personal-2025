---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
---

<BaseLayout title={`${frontmatter.title} - Code(x)`}>
  <main>
    <article>
      <header>
        <h1>{frontmatter.title}</h1>
        <time datetime={frontmatter.date}>
          {new Date(frontmatter.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
      </header>
      <slot />
    </article>
  </main>
</BaseLayout>

<style>
  main {
    flex: 1;
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
    width: 100%;
    box-sizing: border-box;
  }

  article {
    line-height: 1.8;
  }

  header {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 3rem;
    margin: 0 0 1rem;
    background: linear-gradient(to right, #fff, #ccc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    opacity: 0.9;
  }

  time {
    color: #888;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    header {
      margin-bottom: 2rem;
    }
  }
</style> 